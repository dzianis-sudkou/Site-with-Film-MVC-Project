@model Item
@{
    ViewData["Index"] = "Edit your item";
}
<div class="row text">
    <div class="col-md-8 col-sm-8 offset-md-2 offset-sm-2">
        <h2>Edit Your Item</h2>
        <br />
        <div class="row">
            <div class="col-md-8 col-sm-8 offset-sm-2 offset-md-2">
                <form asp-action="Edit" class="row g-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="CollectionId" />
                        <input type="submit" value="Edit" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="List">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>